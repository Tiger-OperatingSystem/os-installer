#!/bin/bash

function getLanguage(){
  language=$(
    yad --borders=32 --text="<big><b>Escolha o idioma do sistema</b></big>\n" --list --fixed              \
        --center --no-header --column= --width=640 --height=480 --title="Tiger OS - Instalar sistema"     \
        "Português Brasileiro"                                                                            \
        "Português Europeu"                                                                               \
        "English"                                                                                         \
        "Español" || exit 0
  )
}
 
